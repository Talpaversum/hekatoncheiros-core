{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hekatoncheiros.local/schemas/app-manifest.schema.json",
  "type": "object",
  "required": ["app_id", "app_name", "version", "vendor", "tenancy", "data", "privileges", "licensing", "integration"],
  "additionalProperties": false,
  "properties": {
    "app_id": { "type": "string", "pattern": "^[a-z0-9_.-]{3,64}$" },
    "app_name": { "type": "string", "minLength": 3, "maxLength": 80 },
    "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(-[a-z0-9.-]+)?$" },
    "vendor": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "minLength": 2, "maxLength": 120 },
        "website": { "type": "string", "format": "uri", "nullable": true }
      }
    },
    "tenancy": {
      "type": "object",
      "required": ["scope", "cross_tenant_collaboration"],
      "additionalProperties": false,
      "properties": {
        "scope": { "type": "string", "enum": ["tenant"] },
        "cross_tenant_collaboration": {
          "type": "object",
          "required": ["supported", "shareables"],
          "additionalProperties": false,
          "properties": {
            "supported": { "type": "boolean" },
            "shareables": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["object_type", "operations"],
                "additionalProperties": false,
                "properties": {
                  "object_type": { "type": "string", "pattern": "^[a-z0-9_.-]{3,64}$" },
                  "operations": {
                    "type": "array",
                    "items": { "type": "string", "enum": ["read", "comment", "act"] },
                    "minItems": 1,
                    "uniqueItems": true
                  }
                }
              },
              "default": []
            }
          }
        }
      }
    },
    "data": {
      "type": "object",
      "required": ["schemas", "no_cross_app_access"],
      "additionalProperties": false,
      "properties": {
        "schemas": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "pattern": "^[a-z][a-z0-9_]{2,48}$" },
          "uniqueItems": true
        },
        "no_cross_app_access": { "const": true }
      }
    },
    "privileges": {
      "type": "object",
      "required": ["required", "optional"],
      "additionalProperties": false,
      "properties": {
        "required": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[a-z0-9_.:-]{3,80}$" },
          "uniqueItems": true
        },
        "optional": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[a-z0-9_.:-]{3,80}$" },
          "uniqueItems": true,
          "default": []
        }
      }
    },
    "impersonation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["supported", "allowed_roles", "allow_cross_tenant"],
      "properties": {
        "supported": { "type": "boolean" },
        "allowed_roles": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[a-z0-9_.:-]{3,80}$" },
          "default": []
        },
        "allow_cross_tenant": { "const": false }
      },
      "default": { "supported": false, "allowed_roles": [], "allow_cross_tenant": false }
    },
    "delegation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["supported", "actions"],
      "properties": {
        "supported": { "type": "boolean" },
        "actions": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[a-z0-9_.:-]{3,120}$" },
          "default": []
        }
      },
      "default": { "supported": false, "actions": [] }
    },
    "licensing": {
      "type": "object",
      "required": ["enforced_by_app", "offline_supported", "modes", "expiry_behavior"],
      "additionalProperties": false,
      "properties": {
        "enforced_by_app": { "const": true },
        "offline_supported": { "type": "boolean" },
        "modes": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": { "type": "string", "enum": ["perpetual", "time_limited", "scale_limited"] }
        },
        "expiry_behavior": {
          "type": "object",
          "required": ["non_destructive", "read_only", "api_read_only"],
          "additionalProperties": false,
          "properties": {
            "non_destructive": { "const": true },
            "read_only": { "type": "boolean" },
            "api_read_only": { "type": "boolean" }
          }
        },
        "features": {
          "type": "object",
          "additionalProperties": { "type": "boolean" },
          "default": {}
        },
        "limits": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["type"],
            "additionalProperties": false,
            "properties": {
              "type": { "type": "string", "enum": ["count", "rate", "size"] },
              "unit": { "type": "string", "minLength": 1, "maxLength": 24, "default": "count" }
            }
          },
          "default": {}
        }
      }
    },
    "integration": {
      "type": "object",
      "required": ["slug", "api", "events", "ui"],
      "additionalProperties": false,
      "properties": {
        "slug": { "type": "string", "pattern": "^[a-z0-9-]{1,32}$" },
        "api": {
          "type": "object",
          "required": ["exposes", "consumes_core_api"],
          "additionalProperties": false,
          "properties": {
            "exposes": {
              "type": "object",
              "required": ["base_path", "version"],
              "additionalProperties": false,
              "properties": {
                "base_path": { "type": "string", "pattern": "^/apps/[a-z0-9_.-]+(/.*)?$" },
                "version": { "type": "string", "pattern": "^v[0-9]+$" }
              }
            },
            "consumes_core_api": { "type": "boolean" }
          }
        },
        "events": {
          "type": "object",
          "required": ["emits", "consumes", "idempotent_consumers"],
          "additionalProperties": false,
          "properties": {
            "emits": { "type": "array", "items": { "type": "string" }, "default": [] },
            "consumes": { "type": "array", "items": { "type": "string" }, "default": [] },
            "idempotent_consumers": { "const": true }
          }
        },
        "ui": {
          "type": "object",
          "required": ["nav_entries"],
          "additionalProperties": false,
          "properties": {
            "nav_entries": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["label", "path", "required_privileges"],
                "additionalProperties": false,
                "properties": {
                  "label": { "type": "string", "minLength": 1, "maxLength": 40 },
                  "path": { "type": "string", "pattern": "^/app/[a-z0-9_.-]+(/.*)?$" },
                  "required_privileges": {
                    "type": "array",
                    "items": { "type": "string" },
                    "minItems": 1,
                    "uniqueItems": true
                  }
                }
              },
              "default": []
            }
          }
        }
      }
    }
  }
}
